<%= render 'shared/content_title', title: 'Create a new category' %>

<% if @category.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8'>
      <h5>You have the following <%= pluralize(@category.errors.count, 'error') %>: </h5>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit 'Create new category', class: 'btn btn-success small'%>
  <% end %>
</div>