<%= render 'shared/errors', obj: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    <div class='form-control'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    
    <div class='form-control'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    
    <div class='form-control'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    
    <%= f.submit(@post.new_record? ? 'Create post' : 'Update post', class: 'btn btn-primary') %>
  <% end %>
</div>